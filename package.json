{
  "name": "resume",
  "version": "1.0.0",
  "description": "My resume",
  "main": "index.js",
  "engines": {
    "node": "24.5.0"
  },
  "dependencies": {
    "resume-cli": "^3.1.2"
  },
  "scripts": {
    "build": "npm run build:en && npm run build:es",
    "build:en": "node ./node_modules/.bin/resume export --format html --theme ./jsonresume-themes/google-style --resume resumes/resume-en.json dist/resume.html",
    "build:es": "node ./node_modules/.bin/resume export --format html --theme ./jsonresume-themes/google-style --resume resumes/resume-es.json dist/resume_es.html",
    "build-pdf": "npm run build-pdf:en && npm run build-pdf:es",
    "build-pdf:en": "node ./node_modules/.bin/resume export --format pdf --theme ./jsonresume-themes/google-style --resume resumes/resume-en.json dist/resume.pdf",
    "build-pdf:es": "node ./node_modules/.bin/resume export --format pdf --theme ./jsonresume-themes/google-style --resume resumes/resume-es.json dist/resume_es.pdf",
    "preview": "node ./node_modules/.bin/resume serve --theme ./jsonresume-themes/google-style --resume resumes/resume-en.json --port 4000",
    "preview:es": "node ./node_modules/.bin/resume serve --theme ./jsonresume-themes/google-style --resume resumes/resume-es.json --port 4001",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dgamboaestrada/resume.git"
  },
  "keywords": [
    "dgamboaestrada",
    "resume",
    "daniel",
    "gamboa",
    "estrada"
  ],
  "author": "Daniel Gamboa Estrada",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dgamboaestrada/resume/issues"
  },
  "homepage": "https://github.com/dgamboaestrada/resume#readme"
}
